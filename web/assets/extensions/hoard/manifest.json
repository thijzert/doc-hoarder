{
	"manifest_version": 2,
	"name": "Doc hoarder",
	"version": "x.y.z-w-gdeadbeef",

	"description": "Archive your favourite internet resources before they disappear",
	"homepage_url": "https://github.com/thijzert/doc-hoarder",
	"icons": {
		"48": "icons/librarian-48.png",
		"96": "icons/librarian-96.png"
	},

	"permissions": [
		"storage",
		"https://xxxxxxxxxxxxxxxxxxxxxxxx/*",
		"activeTab"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "hoard@xxxxxxxxxxxxxxxxxxxxxxxx",
			"update_url": "https://xxxxxxxxxxxxxxxxxxxxxxxx/ext/updates.json"
		}
	},
	
	"browser_action": {
		"default_icon": "icons/librarian-48.png",
		"default_title": "Hoard",
		"default_popup": "popup/hoard.html"
	}
}
